{{#partial "styles"}}
    <link rel="stylesheet" href="/heroes.css">
{{/partial}}

{{#partial "content"}}

        <div class="container intro text-center mt-5">
            <h3 class="mb-4">Add your hero</h3>
        </div>
        <div class="container mt-5 offset-sm-3 pt-3 pb-3">
            <div class="row">
                <div class="col-md-4 offset-sm-2">
                    <form action="/heroes/new" method="POST">
                        <div class="row mb-3">
                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control w-50" id="name" name="name">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="age" class="col-sm-2 col-form-label">Age</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control w-50" id="age" name="age">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <h4>Choose your hero's powers</h4>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="superhuman" name="power" value="Superhuman strength">
                                    <label class="form-check-label" for="superhuman">
                                        Superhuman strength
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="resistance" name="power" value="Fire Resistance">
                                    <label class="form-check-label" for="resistance">
                                        Fire Resistance
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="speed" name="power" value="Super-Speed">
                                    <label class="form-check-label" for="speed">
                                        Super-Speed
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="teleport" name="power" value="Teleportation">
                                    <label class="form-check-label" for="teleport">
                                        Teleport
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="flight" name="power" value="Flight">
                                    <label class="form-check-label" for="flight">
                                        Flight
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <h4>Choose your hero's weaknesses</h4>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="crying" name="weakness" value="Crying">
                                    <label class="form-check-label" for="crying">
                                        Crying
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="names" name="weakness" value="saying My Name">
                                    <label class="form-check-label" for="names">
                                        Saying My Name
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="fire" name="weakness" value="Fire">
                                    <label class="form-check-label" for="fire">
                                        Fire
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="pitch" name="weakness" value="High Pitch">
                                    <label class="form-check-label" for="pitch">
                                        High Pitch
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="water" name="weakness" value="Water">
                                    <label class="form-check-label" for="water">
                                        Water
                                    </label>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col">
                                    <div class="md-form">
                                        <label for="squadId">Squad</label>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Hero</button>
                    </form>
                </div>
            </div>
        </div>


{{/partial}}
{{>layout.hbs}}